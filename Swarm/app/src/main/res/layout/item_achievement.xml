<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_ach"
        android:layout_width="@dimen/button_margin_20"
        android:layout_height="@dimen/button_margin_20"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_checked"/>

    <TextView
        android:id="@+id/tv_ach_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_ach"
        android:layout_marginLeft="@dimen/button_margin_20"
        android:layout_centerVertical="true"
        android:text="first 10 swarms"
        style="@style/title_white_h6_thick"/>
    <TextView
        android:id="@+id/tv_ach_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="+10"
        android:textSize="14sp"
        style="@style/title_white_h6_thick"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>