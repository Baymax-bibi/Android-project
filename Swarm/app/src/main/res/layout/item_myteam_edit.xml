<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="@dimen/button_margin_20"
        android:layout_height="@dimen/button_margin_20"
        android:tint="@color/red_color_100"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_cancel"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/text_color_white_100"
        android:layout_marginLeft="@dimen/margin_80"
        android:layout_centerVertical="true"
        style="@style/title_white_h6_thick"/>
</RelativeLayout>