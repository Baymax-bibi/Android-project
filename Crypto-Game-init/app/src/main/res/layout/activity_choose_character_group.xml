<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/world"
        android:layout_width="match_parent"
        android:layout_height="@dimen/maring_padding_240"
        android:background="@drawable/map2"
        android:layout_alignParentBottom="true"/>

    <View
        android:id="@+id/over"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"/>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/maring_padding_50"
        android:layout_height="@dimen/maring_padding_50"
        android:layout_marginTop="@dimen/maring_padding_15"
        android:layout_marginLeft="@dimen/maring_padding_5"
        android:src="@drawable/ethereum_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/logo"
        android:layout_alignBottom="@id/logo"
        android:fontFamily="@font/rye"
        android:text="ethereum"
        android:textColor="@color/white"
        android:textSize="@dimen/maring_padding_10" />

    <TextView
        android:id="@+id/tv_choose_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginLeft="@dimen/maring_padding_20"
        android:layout_marginTop="@dimen/maring_padding_10"
        android:fontFamily="@font/fredoka_one"
        android:text="@string/choose_character"
        android:textColor="@color/white"
        android:textSize="@dimen/maring_padding_20" />

    <HorizontalScrollView
        android:id="@+id/hl_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/maring_padding_10"
                android:background="@drawable/round_gray">
                <ImageView
                    android:layout_width="@dimen/maring_padding_60"
                    android:layout_height="@dimen/maring_padding_60"
                    android:tint="@color/dark_character_bg"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/tag_recommend"/>
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_avater_1"
                    android:layout_width="@dimen/maring_padding_120"
                    android:layout_height="@dimen/maring_padding_120"
                    android:layout_marginTop="@dimen/maring_padding_15"
                    android:layout_marginLeft="@dimen/maring_padding_30"
                    android:layout_marginRight="@dimen/maring_padding_30"
                    android:src="@drawable/naruto"
                    app:civ_border_color="@color/transparent"
                    android:layout_centerHorizontal="true"
                    app:civ_border_width="3dp"/>
                <TextView
                    android:id="@+id/tv_avatar_1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_avater_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/maring_padding_5"
                    android:fontFamily="@font/fredoka_one"
                    android:text="naruto"
                    android:textSize="@dimen/maring_padding_15"
                    android:textColor="@color/dark_character_bg" />
                <RelativeLayout
                    android:id="@+id/rl_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/maring_padding_10"
                    android:layout_marginLeft="@dimen/maring_padding_1"
                    android:layout_marginRight="@dimen/maring_padding_1"
                    android:layout_below="@id/tv_avatar_1_name">
                    <ImageView
                        android:layout_width="@dimen/maring_padding_15"
                        android:layout_height="@dimen/maring_padding_15"
                        android:src="@drawable/icon_price"
                        android:layout_marginLeft="@dimen/maring_padding_15"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/tv_character_price_rec_1"
                        android:layout_marginRight="@dimen/maring_padding_10"
                        android:tint="@color/dark_character_bg"/>

                    <TextView
                        android:id="@+id/tv_character_price_rec_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/maring_padding_12"
                        android:text="10 ETH"
                        android:textColor="@color/dark_character_bg"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/btn_character_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/maring_padding_10"
                    android:paddingTop="@dimen/maring_padding_5"
                    android:paddingBottom="@dimen/maring_padding_5"
                    android:layout_marginLeft="@dimen/maring_padding_5"
                    android:layout_marginRight="@dimen/maring_padding_5"
                    android:background="@drawable/round_blue"
                    android:fontFamily="@font/voces"
                    android:text="@string/start"
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/maring_padding_10"
                android:background="@drawable/round_gray">
                <ImageView
                    android:layout_width="@dimen/maring_padding_60"
                    android:layout_height="@dimen/maring_padding_60"
                    android:tint="@color/dark_character_bg"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/tag_popular"/>
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_avater_2"
                    android:layout_width="@dimen/maring_padding_120"
                    android:layout_height="@dimen/maring_padding_120"
                    android:layout_marginTop="@dimen/maring_padding_15"
                    android:layout_marginLeft="@dimen/maring_padding_30"
                    android:layout_marginRight="@dimen/maring_padding_30"
                    android:src="@drawable/naruto"
                    app:civ_border_color="@color/transparent"
                    android:layout_centerHorizontal="true"
                    app:civ_border_width="3dp"/>

                <TextView
                    android:id="@+id/tv_avatar_2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_avater_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/maring_padding_5"
                    android:fontFamily="@font/fredoka_one"
                    android:textColor="@color/dark_character_bg"
                    android:textSize="@dimen/maring_padding_15"
                    android:text="naruto" />
                <RelativeLayout
                    android:id="@+id/rl_price_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/maring_padding_10"
                    android:layout_marginLeft="@dimen/maring_padding_1"
                    android:layout_marginRight="@dimen/maring_padding_1"
                    android:layout_below="@id/tv_avatar_2_name">
                    <ImageView
                        android:layout_width="@dimen/maring_padding_15"
                        android:layout_height="@dimen/maring_padding_15"
                        android:src="@drawable/icon_price"
                        android:layout_marginLeft="@dimen/maring_padding_15"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/tv_character_price_rec_2"
                        android:layout_marginRight="@dimen/maring_padding_10"
                        android:tint="@color/dark_character_bg"/>

                    <TextView
                        android:id="@+id/tv_character_price_rec_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/maring_padding_12"
                        android:text="10 ETH"
                        android:textColor="@color/dark_character_bg"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/btn_character_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/maring_padding_10"
                    android:paddingTop="@dimen/maring_padding_5"
                    android:paddingBottom="@dimen/maring_padding_5"
                    android:layout_marginLeft="@dimen/maring_padding_5"
                    android:layout_marginRight="@dimen/maring_padding_5"
                    android:background="@drawable/round_blue"
                    android:fontFamily="@font/voces"
                    android:text="@string/start"
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/maring_padding_10"
                android:background="@drawable/round_gray">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_avater_3"
                    android:layout_width="@dimen/maring_padding_120"
                    android:layout_height="@dimen/maring_padding_120"
                    android:layout_marginTop="@dimen/maring_padding_15"
                    android:layout_marginLeft="@dimen/maring_padding_30"
                    android:layout_marginRight="@dimen/maring_padding_30"
                    android:src="@drawable/naruto"
                    app:civ_border_color="@color/transparent"
                    android:layout_centerHorizontal="true"
                    app:civ_border_width="3dp"/>

                <TextView
                    android:id="@+id/tv_avatar_3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/maring_padding_15"
                    android:layout_below="@id/img_avater_3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/maring_padding_5"
                    android:fontFamily="@font/fredoka_one"
                    android:textColor="@color/dark_character_bg"
                    android:text="naruto" />
                <RelativeLayout
                    android:id="@+id/rl_price_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/maring_padding_10"
                    android:layout_marginLeft="@dimen/maring_padding_1"
                    android:layout_marginRight="@dimen/maring_padding_1"
                    android:layout_below="@id/tv_avatar_3_name">

                    <ImageView
                        android:layout_width="@dimen/maring_padding_15"
                        android:layout_height="@dimen/maring_padding_15"
                        android:src="@drawable/icon_price"
                        android:layout_marginLeft="@dimen/maring_padding_15"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/tv_character_price_rec_3"
                        android:layout_marginRight="@dimen/maring_padding_10"
                        android:tint="@color/dark_character_bg"/>

                    <TextView
                        android:id="@+id/tv_character_price_rec_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/maring_padding_12"
                        android:text="10 ETH"
                        android:textColor="@color/dark_character_bg"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/btn_character_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/maring_padding_10"
                    android:paddingTop="@dimen/maring_padding_5"
                    android:paddingBottom="@dimen/maring_padding_5"
                    android:layout_marginLeft="@dimen/maring_padding_5"
                    android:layout_marginRight="@dimen/maring_padding_5"
                    android:background="@drawable/round_blue"
                    android:fontFamily="@font/voces"
                    android:text="@string/start"
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/maring_padding_240"
                android:layout_marginRight="@dimen/maring_padding_10"
                android:paddingLeft="@dimen/maring_padding_20"
                android:paddingRight="@dimen/maring_padding_20"/>

        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hl_recommend"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/maring_padding_20"
        android:layout_marginTop="@dimen/maring_padding_30"
        android:layout_marginRight="@dimen/maring_padding_20"
        android:background="@drawable/round_blue"
        android:fontFamily="@font/voces"
        android:text="@string/to_dash"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_to_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/maring_padding_20"/>
</RelativeLayout>